#include <iostream>
using namespace std;
int main() 
{
int sum, num, input;
sum=0;
num=1;

cout<<"the sum of even number start from 1 to Your number "<<endl;
cout<<"Please input the Number"<<endl;
cin>>input;
while(num<=input)
{
    if((num%2)==0)
    {
     sum=sum+num;
    }
num=num+1;
}

    return 0;
}
